<div class="row title-bar">
	<div class="columns small-12 medium-10">
		<h3>Listing Years</h3>
	</div> 
	<div class="columns small-12 medium-2">
		<div class="float-right">
			<%= link_to fa_icon("plus 2x"), new_year_path %>
		</div>
	</div>
</div>

<table class="hover stack">
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
	  <th>Range</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @years.each do |year| %>
      <tr>
        <td><%= year.start_date %></td>
        <td><%= year.end_date %></td>
		<td><%= year.range %></td>
        <td><%= link_to 'Show', year %></td>
        <td><%= link_to fa_icon("pencil"), edit_year_path(year) %></td>
        <td><%= link_to fa_icon("trash"), year, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>