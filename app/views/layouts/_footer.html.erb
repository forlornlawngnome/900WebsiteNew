<div class="footer">
	<div class="row align-center align-bottom">
		<div class="small-1 columns">
		</div>
		<div class="small-10 columns ">
			<div class="row">
				<div class="small-12 medium-6 large-expand columns">
					<h5><u>Social Media</u></h5>
					<dl>
						<dt><%=link_to "News", news_path%></a></dt>
						<%SocialMediaLink.all.order(:order).each do |media|%>
							<dt><a href=<%=media.media_url%> target="_blank"><span><%=media.name.titleize%></span></a></dt>
						<%end%>
					</dl>
				</div>
				<div class="medium-6 large-expand columns show-for-medium">
					<h5><u>Website</u></h5>
					<dl>
						<% if current_user %>
							<dt><%= link_to "Admin Page", '/admin' %></dt>
						  	<dt><%= link_to "Logout", '/logout' %></dt>
						<% else %>
						  	<dt><%= link_to 'Login', '/login' %></dt>
							<dt><%= link_to 'Sign Up', '/signup' %></dt>
						<% end %>
						<dt><%=link_to "About", about_site_path%></dt>
					</dl>
				</div>
				<div class="small-12 medium-6 large-expand columns">
					<h5><u>Institutional Sponsors</u></h5>
					<dl>
						<%Sponsor.current_institutional_sponsors.each do |sponsor_year|%>
							<%sponsor = sponsor_year.sponsor%>
							<dt><%=sponsor_name_link sponsor%></dt>
						<%end%>
					</dl>
				</div>
				<div class="medium-6 large-expand columns">
					<h5><u>Gold Sponsors</u></h5>
					<dl>
						<%Sponsor.current_gold_sponsors.each do |sponsor_year|%>
							<%sponsor = sponsor_year.sponsor%>
							<dt><%=sponsor_name_link sponsor%></dt>
						<%end%>
						<hr />
						<dt><%=link_to "#{fa_icon('caret-right')} All Sponsors".html_safe, sponsors_path%></dt>
					</dl>
				</div>
			</div>
		</div>
		<div class="small-12 medium-1 columns">
			<a href="#top"><%=fa_icon "arrow-up"%> Top</a>
		</div>
	</div>
	<br />
</div>