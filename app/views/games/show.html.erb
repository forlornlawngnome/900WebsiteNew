<div class="columns callout small-12">
	<br />
	<table class="hover stack">
		<tr>
			<th class="pull-right show-for-large">Name</th>
			<th class="hide-for-large">Name</th>
			<td>
				<%= @game.name %>
			</td>
		</tr>
		<tr>
			<th class="pull-right show-for-large">Year</th>
			<th class="hide-for-large">Year</th>
			<td>
				<%= link_to @game.year.range, @game.year %>
			</td>
		</tr>
		<tr>
			<th class="pull-right show-for-large">Strategy</th>
			<th class="hide-for-large">Strategy</th>
			<td>
				<%= @game.strategy %>
			</td>
		</tr>
		<tr>
			<th class="pull-right show-for-large">Robot</th>
			<th class="hide-for-large">Robot</th>
			<td>
				<%= link_to @game.robot.name, @game.robot rescue ""%>
			</td>
		</tr>
	</table>
	<hr />
	<div class="row">
		<div class="columns small-12 medium-6">
			<h4>Videos</h4>
			<table class="hover stack">
				<thead>
					<th>Title</th>
				</thead>
				<tbody>
		
					<%@game.game_videos.each do |video|%>
						<tr>
							<td>
								<%=link_to video.title, video%>
							</td>
						</tr>
					<%end%>
				</tbody>
			</table>
		</div>
		<div class="columns small-12 medium-6">
			<h4>Competitions</h4>
			<table class="hover stack">
				<thead>
					<th>Name</th>
					<th>Date</th>
				</thead>
				<tbody>
		
					<%@game.competitions.each do |comp|%>
						<tr>
							<td>
								<%=link_to comp.name, comp%>
							</td>
							<td>
								<%=comp.date%>
							</td>
						</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
	<hr />
  	<div class="row">
		
		<div class="small-12 medium-5 columns">
			<%= link_to fa_icon("pencil"), edit_game_path(@game), :class=>"button expanded"%>
		</div>
		<div class="small-12 medium-5 columns">
			<%= link_to 'Back', games_path , :class=>"button secondary expanded"%>
		</div>
		<div class="small-12 medium-2 columns">
			<%= link_to fa_icon("trash"), @game, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"alert button expanded"%>
		</div>
  	</div>
</div>