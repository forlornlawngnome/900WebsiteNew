<div class="columns callout small-12">
	<div class="row title-bar">
		<h4>Sign Up</h4>
	</div>
	<%=form_for User.new do |f| %>
	    <br />
	    <div class="row">
	  	  <div class="small-3 medium-2 columns">
	  		  <%= f.label :email, :class=>"text-right middle"%>
	        </div>
	        <div class="small-9 medium-10 columns">
	  		  <%=f.text_field :email%>
	        </div>
	    </div>
	    <div class="row">
	  	  <div class="small-3 medium-2 columns">
	  		  <%= f.label :password, :class=>"text-right middle"%>
	        </div>
	        <div class="small-9 medium-10 columns">
	  		  <%=f.password_field :password%>
	        </div>
	    </div>
	    <div class="row">
	  	  <div class="small-3 medium-2 columns">
	  		  <%= f.label :password_confirmation, :class=>"text-right middle"%>
	        </div>
	        <div class="small-9 medium-10 columns">
	  		  <%=f.password_field :password_confirmation%>
	        </div>
	    </div>
	    <div class="row">
	  	  <div class="small-3 medium-2 columns">
	        </div>
	        <div class="small-9 medium-10 columns">
	  		  <%= f.submit "Sign Up", :class=>"button expanded" %>
	        </div>
	    </div>
	<%end%>
  	<div class="row">
		<div class="small-3 medium-2 columns">
		</div>
		<div class="small-9 medium-10 columns">
			<p class="text-right"><%= link_to 'Home', root_path %></p>
		</div>
  	</div>
</div>