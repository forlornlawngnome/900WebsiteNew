      <h2><%= pluralize(@post_content.errors.count, "error") %> prohibited this post_content from being saved:</h2>

      <ul>
      <% @post_content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :post_id %><br>
	<%= f.collection_select(:post_id, Post.all, :id, :title, {:prompt=>true}, {:class=>'my-custom-class'}) %>
  </div>
  <div class="field">
    <%= f.label :content_type_id %><br>
	<%= f.collection_select(:content_type_id, ContentType.all, :id, :name, {:prompt=>true}, {:class=>'my-custom-class'}) %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :supplemental %><br>
    <%= f.text_area :supplemental %>
  </div>
  <div class="field">
    <%= f.label :post_order %><br>
    <%= f.number_field :post_order %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
