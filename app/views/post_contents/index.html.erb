<div class="row title-bar">
	<div class="columns small-12 medium-10">
		<h3>Listing Post Contents</h3>
	</div> 
	<div class="columns small-12 medium-2">
		<div class="float-right">
			<%= link_to fa_icon("plus 2x"), new_post_content_path %>
		</div>
	</div>
</div>

<table class="hover stack scroll">
  <thead>
    <tr>
      <th>Post</th>
      <th>Content type</th>
      <th>Body</th>
	  <th>Supplemental</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_contents.each do |post_content| %>
      <tr>
        <td><%= link_to post_content.post.title, post_content.post %></td>
        <td><%= link_to post_content.content_type.name, post_content.content_type %></td>
        <td><%= render "/post_contents/post_content", :content=> post_content %></td>
        <td><%= post_content.post_order %></td>
        <td><%= link_to 'Show', post_content %></td>
        <td><%= link_to fa_icon("pencil"), edit_post_content_path(post_content) %></td>
        <td><%= link_to fa_icon("trash"), post_content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>