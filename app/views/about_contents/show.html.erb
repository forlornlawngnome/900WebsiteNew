<div class="columns callout small-12">
	<br />
	<table class="hover stack">
		<tr>
			<th class="pull-right show-for-large">Name</th>
			<th class="hide-for-large">Name</th>
			<td>
				<%= @about_content.name %>
			</td>
		</tr>
		<tr>
			<th class="pull-right show-for-large">Title</th>
			<th class="hide-for-large">Title</th>
			<td>
				<%= @about_content.title %>
			</td>
		</tr>
		<tr>
			<th class="pull-right show-for-large">Content</th>
			<th class="hide-for-large">Content</th>
			<td>
				<%= @about_content.content.html_safe %>
			</td>
		</tr>
	</table>
	
	<hr />
  	<div class="row">
		
		<div class="small-12 medium-5 columns">
			<%= link_to fa_icon("pencil"), edit_about_content_path(@about_content), :class=>"button expanded"%>
		</div>
		<div class="small-12 medium-5 columns">
			<%= link_to 'Back', about_contents_path , :class=>"button secondary expanded"%>
		</div>
		<div class="small-12 medium-2 columns">
			<%= link_to fa_icon("trash"), @about_content, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"alert button expanded"%>
		</div>
  	</div>
</div>


