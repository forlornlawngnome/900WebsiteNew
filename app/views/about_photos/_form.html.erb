<%= form_for(@about_photo) do |f| %>
	<% if @about_photo.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@about_photo.errors.count, "error") %> prohibited this about_photo from being saved:</h2>

			<ul>
				<% @about_photo.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %> 
  <br />
  <div class="row">
	  <div class="small-3 medium-2 columns">
		  <%= f.label :name, :class=>"text-right middle"%>
      </div>
      <div class="small-9 medium-10 columns">
		  <%=f.text_field :name%>
      </div>
  </div>
  <div class="row">
	  <div class="small-3 medium-2 columns">
		  <%= f.label :image, :class=>"text-right middle"%>
      </div>
      <div class="small-9 medium-10 columns">
		<%= f.file_field :image %>
		<% if f.object.image? %>
			<%= image_tag f.object.image.url %>
		    <div class="row">
		  	  <fieldset class=" small-12 columns">
				   <%=f.check_box :remove_image%>
		  		  <%= f.label :remove_image, :class=>"text-right middle"%>
			  </fieldset>
		    </div>
		<% end %>
      </div>
  </div>

  <div class="row">
	  <div class="small-3 medium-2 columns">
      </div>
      <div class="small-9 medium-10 columns">
		  <%= f.submit "Submit", :class=>"button expanded" %>
      </div>
  </div>
<% end %>
