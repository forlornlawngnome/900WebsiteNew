<div class="columns callout small-12">
	<br />
	<table class="hover stack">
		<tr>
			<th class="pull-right show-for-large">Person</th>
			<th class="hide-for-large">Person</th>
			<td>
				<%= link_to @documents_person.person.name, @documents_person.person %>
			</td>
		</tr>
		<tr>
			<th class="pull-right show-for-large">Document</th>
			<th class="hide-for-large">Document</th>
			<td>
				<%= link_to @documents_person.document.name, @documents_person.document %>
			</td>
		</tr>
	</table>
	<hr />
  	<div class="row">
		
		<div class="small-12 medium-5 columns">
			<%= link_to fa_icon("pencil"), edit_documents_person_path(@documents_person), :class=>"button expanded"%>
		</div>
		<div class="small-12 medium-5 columns">
			<%= link_to 'Back', documents_people_path , :class=>"button secondary expanded"%>
		</div>
		<div class="small-12 medium-2 columns">
			<%= link_to fa_icon("trash"), @documents_person, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"alert button expanded"%>
		</div>
  	</div>
</div>