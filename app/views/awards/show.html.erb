<div class="columns callout small-12">
	<br />
	<table class="hover stack">
		<tr>
			<th class="pull-right show-for-large">Name</th>
			<th class="hide-for-large">Name</th>
			<td>
				<%= @award.name %>
			</td>
		</tr>
		<tr>
			<th class="pull-right show-for-large">Description</th>
			<th class="hide-for-large">Description</th>
			<td>
				<%= @award.description %>
			</td>
		</tr>
	</table>
	<hr />
	<h4>Awards Won at Competition</h4>
	<table class="hover stack">
		<thead>
			<th>Year</th>
			<th>Competition</th>
			<th>Description</th>
		</thead>
		<tbody>
		
			<%@award.awards_competitions.each do |award_comp|%>
				<tr>
					<td>
						<%=link_to award_comp.competition.year.range, award_comp.competition.year%>
					</td>
					<td>
						<%=link_to award_comp.competition.name, award_comp.competition%>
					</td>
					<td>
						<%=link_to award_comp.blurb, award_comp%>
					</td>
				</tr>
			<%end%>
		</tbody>
	</table>
	<hr />
  	<div class="row">
		
		<div class="small-12 medium-5 columns">
			<%= link_to fa_icon("pencil"), edit_award_path(@award), :class=>"button expanded"%>
		</div>
		<div class="small-12 medium-5 columns">
			<%= link_to 'Back', awards_path , :class=>"button secondary expanded"%>
		</div>
		<div class="small-12 medium-2 columns">
			<%= link_to fa_icon("trash"), @award, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"alert button expanded"%>
		</div>
  	</div>
</div>