<div class="row title-bar">
	<div class="columns small-12 medium-10">
		<h3>Listing Handbooks</h3>
	</div> 
	<div class="columns small-12 medium-2">
		<div class="float-right">
			<%= link_to fa_icon("plus 2x"), new_handbook_path %>
		</div>
	</div>
</div>

<table class="hover stack">
  <thead>
    <tr>
      <th>Handbook link</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @handbooks.each do |handbook| %>
      <tr>
        <td><%= link_to handbook.handbook_link, handbook.handbook_link, :target=>"_blank" %></td>
        <td><%= handbook.about.html_safe %></td>
        <td><%= link_to 'Show', handbook %></td>
        <td><%= link_to fa_icon("pencil"), edit_handbook_path(handbook) %></td>
        <td><%= link_to fa_icon("trash"), handbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>