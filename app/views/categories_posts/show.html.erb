<div class="columns callout small-12">
	<br />
	<table class="hover stack">
		<tr>
			<th class="pull-right show-for-large">Post</th>
			<th class="hide-for-large">Post</th>
			<td>
				<%= link_to @categories_post.post.title, @categories_post.post %>
			</td>
		</tr>
		<tr>
			<th class="pull-right show-for-large">Category</th>
			<th class="hide-for-large">Category</th>
			<td>
				<%= link_to @categories_post.category.name, @categories_post.category %>
			</td>
		</tr>
	</table>
	<hr />
  	<div class="row">
		<div class="small-12 medium-5 columns">
			<%= link_to fa_icon("pencil"), edit_categories_post_path(@categories_post), :class=>"button expanded"%>
		</div>
		<div class="small-12 medium-5 columns">
			<%= link_to 'Back', categories_posts_path , :class=>"button secondary expanded"%>
		</div>
		<div class="small-12 medium-2 columns">
			<%= link_to fa_icon("trash"), @categories_post, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"alert button expanded"%>
		</div>
  	</div>
</div>