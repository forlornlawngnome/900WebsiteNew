<div class="row">
	<div class="columns small-12 medium-10">
		<h1>Listing Categories/Posts</h1>
	</div> 
	<div class="columns small-12 medium-2">
		<div class="float-right">
			<%= link_to fa_icon("plus 2x"), new_categories_post_path %>
		</div>
	</div>
</div>

<table class="hover stack">
  <thead>
    <tr>
      <th>Post</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories_posts.each do |categories_post| %>
      <tr>
        <td><%= link_to categories_post.post.title, categories_post.post %></td>
        <td><%= link_to categories_post.category.name, categories_post.category %></td>
        <td><%= link_to 'Show', categories_post %></td>
        <td><%= link_to fa_icon("pencil"), edit_categories_post_path(categories_post) %></td>
        <td><%= link_to fa_icon("trash"), categories_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>