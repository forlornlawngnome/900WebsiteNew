<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :role_id %><br>
    <%= f.collection_select(:role_id, Role.all, :id, :name, {:prompt=>true}, {:class=>'my-custom-class'}) %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
	<% if f.object.image? %>
	      <%= image_tag f.object.image.url %>
	      <%= f.label :remove_image %>
	      <%= f.check_box :remove_image %> 
    <% end %>
  </div>
  <div class="field">
    <%= f.label :year_start %><br>
    <%= f.number_field :year_start %>
  </div>
  <div class="field">
    <%= f.label :year_end %><br>
    <%= f.number_field :year_end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
